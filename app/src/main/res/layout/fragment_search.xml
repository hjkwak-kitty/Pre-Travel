<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:weightSum="1">

        <Button
            android:layout_width="61px"
            android:layout_height="58px"
            android:background="@drawable/btn_favorite"
            android:id="@+id/Btnfavorite" />

        <EditText
            android:layout_width="255dp"
            android:layout_height="match_parent"
            android:hint="@string/hint_search"
            android:id="@+id/inputSearch"
            android:textColor="@color/input_where_hint"
            android:gravity="center"
            android:textSize="15dp" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="115px"
            android:layout_height="97px"
            android:background="@drawable/btn_search"
            android:textColor="@color/white"
            android:textSize="13dp"
            android:id="@+id/btnSearch" />


    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_book"
            android:textSize="15dp"
            android:layout_marginRight="1dp"
            android:textColor="@color/white"
            android:layout_weight="1"
            android:background="@color/mint"
            android:id="@+id/btnBook" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_movie"
            android:textSize="15dp"
            android:textColor="@color/white"
            android:background="@color/green"
            android:layout_weight="1"
            android:id="@+id/btnMovie" />
    </LinearLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/listviewSerachResult" />

</LinearLayout>